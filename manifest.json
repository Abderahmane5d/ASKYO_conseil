{
    "name": "My Extension",
    "version": "1.0",
    "description": "Generating auto responses for mails",
    "permissions": ["tabs", "declarativeContent", "storage", "identity", "activeTab", "scripting", "browser_action", "cookies"],
    "host_permissions": ["https://mail.google.com/*"],
    "background": {
      "server_worker": "background.js"
    },
    "manifest_version": 3,
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
        {
          "resources": [
            "assets/btn_check.png",
            "assets/Btn_retry.png"
          ],
          "matches": ["https://mail.google.com/*"]
        }
      ],
      "action": {
        "default_icon": {
          "16": "assets/Logo_extension.png",
          "24": "assets/Logo_extension.png",
          "32": "assets/Logo_extension.png"
        },
        "default_title": "My KYO Extension",
        "default_popup": "popup.html"
      }
  }